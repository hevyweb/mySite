<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header d-flex justify-content-between">
        <strong class="mr-auto">
            {% if (type == 'error') %}
                <i class="fa-solid fa-triangle-exclamation alert-danger"></i> {% trans %}Error{% endtrans %}
            {% else %}
                <i class="fa-solid fa-circle-info alert-success"></i> {% trans %}Successfully completed{% endtrans %}
            {% endif %}
        </strong>
        <button type="button" class="ml-auto btn-sm btn btn-danger close flash-close" data-dismiss="toast" aria-label="{% trans %}Close{% endtrans %}">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        {{ message }}
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn flash-close mb-3">{% trans %}Ok{% endtrans %}</button>
    </div>
</div>