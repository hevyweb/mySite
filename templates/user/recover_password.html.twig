{% extends 'base.html.twig' %}
{% trans_default_domain 'user' %}

{% block content %}
<div class="login_form">
    <h1>{% trans %}Recover password{% endtrans %}</h1>
    <div class="recover-password-body">
        {{ form_start(form) }}
        {{ form_row(form.email) }}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('recover_password') }}">
        <button class="btn btn-lg btn-primary" type="submit">
            {% trans %}Recover password{% endtrans %}
        </button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
